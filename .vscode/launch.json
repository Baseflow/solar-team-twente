  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch development",
      "request": "launch",
      "type": "dart",
      "flutterMode": "debug",
      "program": "lib/main.dart",
      "args": [
        "--dart-define-from-file",
        ".env.dev",
        "--dart-define-from-file",
        ".secrets/.secrets.dev",
        "--web-port",
        "8080",
        "--target",
        "lib/main.dart"
      ]
    },
